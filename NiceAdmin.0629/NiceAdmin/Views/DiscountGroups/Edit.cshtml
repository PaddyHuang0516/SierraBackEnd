@model NiceAdmin.Models.ViewModels.DiscountGroupEditVM

@{
    ViewBag.Title = "Edit";
    int discountGroupId = Model.DiscountGroupId;
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>編輯優惠群組</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                <li class="breadcrumb-item">   行銷管理  </li>
                <li class="breadcrumb-item">  優惠群組  </li>
                <li class="breadcrumb-item active">  編輯優惠群組  </li>
            </ol>
        </nav>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DiscountGroupId)
        <div>
            <div class="form-group">
                @Html.LabelFor(model => model.DiscountGroupName, htmlAttributes: new { @class = "form-label col-md-2" })
                <div class="col-md-3 mb-2">
                    @Html.EditorFor(model => model.DiscountGroupName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiscountGroupName, "", new { @class = "text-danger" })
                </div>
            </div>
            @*這裡是商品列表*@
            <table class="table table-striped table-hover datatable">
                <thead>
                    <tr>
                        <th>
                            甜點名稱
                        </th>
                        <th>
                            甜點分類
                        </th>
                        <th>
                            單價
                        </th>
                        <th>
                            功能
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Desserts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DessertName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                <button class="btn btn-primary add" data-id="@item.DessertId">加入</button>

                                @Html.ActionLink("去除", "Edit", new
                                {@*discountGroupId = item.DiscountGroupId*@}, new { @class = "btn btn-secondary d-none" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
            <h5 class="text-primary-emphasis fw-bold">群組中的商品</h5>
            @* 群組內的商品 *@
            @foreach (var item in Model.DiscountGroupItems)
            {
                <button class="btn btn-success m-1 selected_dessert">@item.Dessert.DessertName<i class="fa-solid fa-xmark ms-2"></i></button>
            }
            <div class="form-group">
                <div class="mt-2 ">
                    <input type="submit" value="完成" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    @*?DiscountGroupId="+discountGroupId+"&DessertId="+dessertId*@
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://kit.fontawesome.com/4815e83c25.js" crossorigin="anonymous"></script>
    <script>
        var discountGroupId = @discountGroupId;

        $('.add').click(function () {
            var self = $(this)
            var dessertId = self.attr("data-id");
            console.log(dessertId)
            $.ajax({
                type: "POST",
                url: "/DiscountGroups/Add",
                data: { discountGroupId: discountGroupId, DessertId: dessertId },
            }).done(function (data) {

            }).fail(function (err) {
                alert(err.statusText);
            });
        }
        



    </script>
}
