@model NiceAdmin.Models.ViewModels.PromotionsVM.MemberCouponDetailVM

@{
    ViewBag.Title = "Details";
}

<main id="main" class="main">

    <div class="pagetitle mt-3">
        <h1>@Model.MemberName 的優惠券</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                <li class="breadcrumb-item">   行銷管理  </li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","MemberCoupons")">  會員優惠券清單</a>  </li>
                <li class="breadcrumb-item active">  @Model.MemberName 的優惠券  </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="card">
            <div class="card-body">
                <!-- End Page Title -->
                <section class="section mt-3">

                    <div>
                        <table class="table table-striped table-hover datatable">
                            <thead>
                                <tr>
                                    <th>
                                        優惠券名稱
                                    </th>
                                    <th>
                                        取得時間
                                    </th>
                                    <th>
                                        使用時間
                                    </th>
                                    <th>
                                        過期時間
                                    </th>
                                    <th>
                                        狀態
                                    </th>
                                    <th>
                                        功能
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MemberCoupons)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CouponName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreateAt)
                                        </td>
                                        <td class="useAt">
                                            @Html.DisplayFor(modelItem => item.UseAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ExpireAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StatusText)
                                        </td>
                                        <td>
                                            @Html.ActionLink("優惠券詳情", "Details", "Coupons", new { id = item.CouponId }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                </section>
            </div><!-- End Default Tabs -->
        </div>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('.useAt').each(function () {
                var useAtText = $(this).text().trim()
                if (useAtText == "") {
                    $(this).text("未使用")
                }
            })

        })
    </script>
}