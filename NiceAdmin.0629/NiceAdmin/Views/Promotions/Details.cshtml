@model NiceAdmin.Models.ViewModels.PromotionsVM.PromotionDetailVM

@{
    ViewBag.Title = "Details";
}
<main id="main" class="main">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="pagetitle mt-3">
                    <h1>促銷活動詳情</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                            <li class="breadcrumb-item">   行銷管理  </li>
                            <li class="breadcrumb-item ">  <a href="@Url.Action("Index","Promotions")">促銷活動清單</a>  </li>
                            <li class="breadcrumb-item active">  促銷活動詳情  </li>
                        </ol>
                    </nav>
                </div>
                <!-- End Page Title -->
                <section class="section">
                    <div class="d-flex justify-content-center mb-2">
                        <img src="~/Uploads/@Model.PromotionImage" alt="@Model.PromotionImage" class="promotionDetailImg">
                    </div>
                    <h3>@Model.PromotionName</h3>
                    <p>活動時間:@Model.StartAt ~ @Model.EndAt</p>
                    <p>    @Model.Description</p>
                    <p class="text-end">發布時間:@Model.LaunchAt </p>

                </section>
            </div><!-- End Default Tabs -->
        </div>
    </div>
</main>