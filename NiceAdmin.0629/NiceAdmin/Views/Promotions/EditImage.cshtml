@model NiceAdmin.Models.ViewModels.PromotionsVM.PromotionEditImageVM

@{
    ViewBag.Title = "EditImage";
}

<main id="main" class="main">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="pagetitle mt-3">
                    <h1>編輯促銷活動</h1>
                    <nav>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                            <li class="breadcrumb-item">   行銷管理  </li>
                            <li class="breadcrumb-item "><a href="@Url.Action("Index","Promotions")">  促銷活動清單</a>  </li>
                            <li class="breadcrumb-item active">  編輯圖片  </li>
                        </ol>
                    </nav>
                </div>
                <!-- End Page Title -->
                <section class="section">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <h4>PromotionEditImageVM</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.PromotionId)

                            <div class="mb-3">
                                @Html.LabelFor(model => model.PromotionImage, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.PromotionImage, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PromotionImage, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </section>
            </div><!-- End Default Tabs -->
        </div>
    </div>
</main>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
