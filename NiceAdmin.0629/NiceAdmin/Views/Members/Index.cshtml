@model IEnumerable<NiceAdmin.Models.ViewModels.MembersVM.MemberIndexVM>

@{
    ViewBag.Title = "Index";
    var criteria = ViewBag.Criteria as NiceAdmin.Models.ViewModels.MembersVM.MemberCriteria;

}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>會員清單</h1>
        <nav class="mt-2">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Members")">會員清單</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Employees")">員工清單</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Roles")">角色清單</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Permissions")">權限清單</a></li>
            </ol>
        </nav>
    </div>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@

    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="pagetitle mt-5">
                    <section class="container">
                        <form method="get">
                            <div class="row">
                                <div class="mb-3 col-2">
                                    <label for="account">帳號</label>
                                    <input type="text" class="form-control" name="MemberName" id="account" value="@criteria.MemberName">
                                </div>

                                <div class="mb-3 col-3">
                                    <label for="birth">生日起</label>
                                    <input class="form-control" id="criteria_Birth" name="MinBirth" type="datetime-local" value="@(criteria.MinBirth?.ToString("yyyy-MM-ddTHH:mm"))">
                                </div>
                                <div class="mb-3 col-3">
                                    <label for="birth">生日訖</label>
                                    <input class="form-control" id="criteria_Birth" name="MaxBirth" type="datetime-local" value="@(criteria.MaxBirth?.ToString("yyyy-MM-ddTHH:mm"))">
                                </div>

                                <div class="mb-3 col-2">
                                    <label for="isBan">帳號狀態</label>
                                    <div>
                                        <input type="radio" class="form-check-input" name="IsBan" id="isBan-yes" value="true" @(criteria.IsBan == true ? "checked" : "")>
                                        <label for="isBan-yes">停權</label>
                                        <input type="radio" class="form-check-input" name="IsBan" id="isBan-no" value="false" @(criteria.IsBan == false ? "checked" : "")>
                                        <label for="isBan-no">正常</label>
                                        <input type="radio" class="form-check-input" name="IsBan" id="isBan-both" value="null" @(criteria.IsBan == null ? "checked" : "")>
                                        <label for="isBan-both">都選</label>
                                    </div>
                                </div>

                                <div class="mb-3 col-2 align-self-end">
                                    <button class="btn btn-primary">查詢</button>
                                </div>
                            </div>
                        </form>
                    </section>

                    <table class="table table-striped table-hover datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MemberId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MemberName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreateAt)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Birth)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GenderText)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsBanText)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CancelTimes)
                                </th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Uploads/Members/@item.ImageName" style=" width:50px ;height:50px" class="rounded-circle" />
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MemberName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Birth)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GenderText)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsBanText)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CancelTimes)
                                    </td>
                                    @*<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.MemberId }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
                                        </td>*@
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</main>