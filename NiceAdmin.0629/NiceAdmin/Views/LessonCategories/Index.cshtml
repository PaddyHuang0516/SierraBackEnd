@model IEnumerable<NiceAdmin.Models.EFModels.LessonCategory>

@{
    ViewBag.Title = "Index";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1></h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","LessonCategories")">課程類別管理</a></li>
                <li class="breadcrumb-item active"><a href="@Url.Action("Index","LessonCategories")">課程類別清單</a></li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->
 


<h2>課程分類</h2>

<p>
    <button class="btn btn-outline-primary text-light fw-bold"> @Html.ActionLink("新增課程類別", "Create")</button>
</p>
<table class="table table-striped table-hover datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonCategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LessonCategoryId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LessonCategoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LessonCategoryId })
                </td>
            </tr>
        }
    </tbody>
</table>
    </main>