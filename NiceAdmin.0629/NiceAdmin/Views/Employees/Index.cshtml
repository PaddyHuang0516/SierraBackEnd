@model IEnumerable<NiceAdmin.Models.ViewModels.MembersVM.EmployeeIndexVM>

@{
    ViewBag.Title = "Index";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>員工管理</h1>
        <nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">首頁</a></li>
				<li class="breadcrumb-item"><a href="@Url.Action("Index","Employees")">員工列表</a></li>
				<li class="breadcrumb-item"><a href="@Url.Action("Index","Roles")">角色列表</a></li>
				<li class="breadcrumb-item"><a href="@Url.Action("Index","Permissions")">權限列表</a></li>
			</ol>
        </nav>
    </div>


    <p>
        @Html.ActionLink("新增員工", "Create")
    </p>
    <table class="table table-striped table-hover datatable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateAt)
                </th>
				<th>
					@Html.DisplayNameFor(model => model.RoleName)
				</th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateAt)
                    </td>
					<td>
						@Html.DisplayNameFor(model => model.RoleName)
					</td>
                    <td>
                        @Html.ActionLink("編輯", "Edit", new { id = item.EmployeeId }) |
                        @Html.ActionLink("細節", "Details", new { id = item.EmployeeId }) |
                        @Html.ActionLink("刪除", "Delete", new { id = item.EmployeeId })
                    </td>
                </tr>
            }
        <tbody>
    </table>
</main>